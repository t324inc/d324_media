{#
/**
 * @file
 * Default theme implementation to display an oEmbed resource in an iframe.
 *
 * @ingroup themeable
 */
#}
<!DOCTYPE html>
<html>
<head>
  <style>
    iframe {
      position: absolute;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
  <script src="{{ base_path }}{{ d324_media_path }}/js/oembed-frame.d324-media.{{ provider }}.js?version=1.5"></script>
</head>
<body style="margin: 0">
{% if video_id %}
  <style>
    .youtube-player {
      position: relative;
      padding-bottom: 56.23%;
      /* Use 75% for 4:3 videos */
      height: 0;
      overflow: hidden;
      max-width: 100%;
      background: #000;
    }

    .youtube-player iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 100;
      background: transparent;
    }

    .youtube-player img {
      bottom: 0;
      display: block;
      left: 0;
      margin: auto;
      max-width: 100%;
      width: 100%;
      position: absolute;
      right: 0;
      top: 0;
      border: none;
      height: auto;
      cursor: pointer;
      -webkit-transition: .4s all;
      -moz-transition: .4s all;
      transition: .4s all;
    }

    .youtube-player img:hover {
      -webkit-filter: brightness(75%);
    }

    .youtube-player .yt-button {
      width: 102px;
      height: 72px;
      position: absolute;
      left: 50%;
      top: 50%;
      margin-top: -36px;
      margin-left: -51px;
      transition: all .35s ease;
      cursor: pointer;
    }

    .youtube-player:hover .yt-button {
      width: 112.2px;
      height: 79.2px;
      margin-top: -39.6px;
      margin-left: -56.1px;
    }

    .youtube-player .yt-button .ytp-large-play-button-bg {
      transition: all .35s ease;
    }

    .youtube-player:hover .yt-button .ytp-large-play-button-bg {
      fill: #f00;
    }

    .youtube-player .yt-button:hover .ytp-large-play-button-bg {
      fill: #f00;
      fill-opacity: 1;
    }

  </style>
  <div class="youtube-player" data-id="{{ video_id }}"></div>
{% else %}
  {{ media|replace({'src=': 'data-src='})|raw }}
{% endif %}
</body>
</html>
